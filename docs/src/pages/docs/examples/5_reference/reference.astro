---
import DocsLayout from '../../../../layouts/DocsLayout.astro';

const breadcrumbs = [
  { label: 'Documentation', href: '/odin/docs/introduction/overview' },
  { label: 'Examples' },
  { label: 'Model References' },
];

const headings = [
  { depth: 2, slug: 'example', text: 'Example' },
];
---

<DocsLayout
  title="Model References Example"
  description="Referencing other models"
  breadcrumbs={breadcrumbs}
  headings={headings}
>
  <h2 id="example">Example</h2>

  <pre set:html={`<code>model User {
  fields {
    id() int
    name() string
  }

  gens {
    func id() {
      return iter + 1
    }

    func name() {
      return Name()
    }
  }
}

model Order {
  fields {
    id() int
    userId() int
    amount() float
  }

  gens {
    func id() {
      return iter + 1
    }

    func userId() {
      return Reference("User", "id")
    }

    func amount() {
      return FloatBetween(10.0, 1000.0)
    }
  }
}</code>`}></pre>

  <h2>Related Documentation</h2>
  <ul>
    <li><a href="/odin/docs/concepts/advanced/model-references">Model References</a></li>
  </ul>
</DocsLayout>

